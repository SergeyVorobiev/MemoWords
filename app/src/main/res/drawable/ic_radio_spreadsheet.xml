<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/darkBrizz">
    <item>
        <layer-list>
            <item android:width="28dp" android:height="28dp" android:gravity="center">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#8EDDAE"
                        android:endColor="#EBFFFA"
                        android:angle="45" />
                    <stroke android:width="1dp" android:color="#8EDDAE" />
                </shape>
            </item>
            <item android:width="23dp" android:height="23dp" android:gravity="center">
                <bitmap android:src="@raw/ic_spreadsheet2"
                    android:tintMode="multiply"
                    android:tint="#00C9A0"/>
            </item>
        </layer-list>
    </item>
</ripple>