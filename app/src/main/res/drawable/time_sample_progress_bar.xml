<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="4dp" />
            <gradient
                android:startColor="#00396A"
                android:centerColor="#00396A"
                android:centerY="1.0"
                android:endColor="#00396A"
                android:angle="0"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="3dp" />
                <gradient
                    android:startColor="#FF8C00"
                    android:centerColor="#D1416F"
                    android:centerY="1.0"
                    android:endColor="#FFD14D"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>