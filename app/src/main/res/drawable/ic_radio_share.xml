<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/darkBrizz">
    <item>
        <layer-list>
            <item android:width="28dp" android:height="28dp" android:gravity="center">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#ECEDFF"
                        android:endColor="#AAD7FF"
                        android:angle="45" />
                    <stroke android:width="1dp" android:color="#8DA5FF" />
                </shape>
            </item>
            <item android:width="26dp" android:height="26dp" android:gravity="center">
                <bitmap android:src="@raw/ic_share_2ef"
                    android:tintMode="multiply"
                    android:tint="#FFFFFF"/>
            </item>
        </layer-list>
    </item>
</ripple>