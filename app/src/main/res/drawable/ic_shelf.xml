<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#B60000">
    <item
        android:width="48dp"
        android:height="48dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#F7FDFF"
                android:startColor="#F4F6FF" />
            <stroke
                android:width="1dp"
                android:color="#799DC1" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item
        android:width="30dp"
        android:height="36dp"
        android:gravity="center">
        <bitmap android:src="@raw/shelf3" />
    </item>
</ripple>