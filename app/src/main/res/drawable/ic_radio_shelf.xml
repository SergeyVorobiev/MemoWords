<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/darkBrizz">
    <item>
        <layer-list>
            <item android:width="28dp" android:height="28dp" android:gravity="center">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#C9E9FF"
                        android:endColor="#9AFFE8"
                        android:angle="45" />
                    <stroke android:width="1dp" android:color="#6CCBFF" />
                </shape>
            </item>
            <item android:width="16dp" android:height="16dp" android:gravity="center">
                <bitmap android:src="@raw/ic_shelf2"
                    android:tintMode="multiply"
                    android:tint="#D3D9FF"/>
            </item>
        </layer-list>
    </item>
</ripple>