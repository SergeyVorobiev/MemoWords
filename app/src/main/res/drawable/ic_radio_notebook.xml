<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/darkBrizz">
    <item>
        <layer-list>
            <item android:width="28dp" android:height="28dp" android:gravity="center">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#EBEEFF"
                        android:endColor="#B3E9FF"
                        android:angle="45" />
                    <stroke android:width="1dp" android:color="#6CCBFF" />
                </shape>
            </item>
            <item android:width="20dp" android:height="20dp" android:gravity="center">
                <bitmap android:src="@raw/book2"
                    android:tintMode="multiply"
                    android:tint="#F2D9FF"/>
            </item>
        </layer-list>
    </item>
</ripple>