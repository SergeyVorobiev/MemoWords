<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FF0000">
    <item android:width="30dp" android:height="30dp" android:gravity="center">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#ECFAFF"
                android:endColor="#FFFFFF"
                android:angle="0" />
            <corners
                android:radius="3dp" />
            <stroke
                android:width="1dp"
                android:color="#36B9FF" />
        </shape>
    </item>
    <item android:width="20dp" android:height="20dp" android:gravity="center">
        <bitmap android:src="@raw/ic_instagram" />
    </item>
</ripple>