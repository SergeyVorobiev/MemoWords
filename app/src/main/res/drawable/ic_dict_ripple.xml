<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/darkBrizz">
    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#EEFAFF"
                android:startColor="#EBEEFF" />
            <stroke
                android:width="1px"
                android:color="#7399BE" />
            <corners android:radius="6dp" />
        </shape>

    </item>
    <item
        android:width="36dp"
        android:height="36dp"
        android:gravity="center">
        <bitmap android:src="@raw/ic_book" />
    </item>
</ripple>
