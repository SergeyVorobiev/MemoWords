<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spreadsheetItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:alpha="1"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:alpha="1"
        android:background="@drawable/bg_item_spreadsheet"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            android:alpha="1"
            app:srcCompat="@drawable/ic_sheet"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/spreadsheet_icon_description" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/spreadsheetId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginVertical="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingHorizontal="3dp"
                android:paddingVertical="1dp"
                tools:text="34590409jssdlfjsdflj430"
                android:textAlignment="viewEnd"
                android:textColor="@color/notAnswered"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/spreadsheetName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:gravity="center|start"
                android:textAlignment="viewStart"
                android:textColor="#4C4C4C"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Name" />

        </LinearLayout>

        <ImageView
            android:id="@+id/cancelSheet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleX="1.1"
            android:scaleY="1.1"
            app:srcCompat="@drawable/btn_cancel_item"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/spreadsheet_cancel_button_description" />

    </LinearLayout>

</androidx.cardview.widget.CardView>