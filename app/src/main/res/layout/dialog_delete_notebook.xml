<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deleteNotebookDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_default"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/deleteNotebookDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/dialog_delete_notebook_header"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/deleteNotebookDialogWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_warning_default"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingHorizontal="5dp"
        android:text="@string/dialog_delete_notebook_warning"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/deleteNotebookConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minHeight="48dp"
        android:text="@string/dialog_delete_notebook_confirm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/notebookCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/btn_dialog_standard_cancel"
            android:text="@string/dialog_cancel"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/notebookDelete"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/btn_dialog_delete"
            android:text="@string/delete_notebook_button"
            android:textColor="#FFF"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
</LinearLayout>