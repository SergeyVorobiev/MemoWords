<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sampleMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_item_sample"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kindLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:textAllCaps="false"
                android:textColor="#454242"
                android:textSize="9sp"
                android:textStyle="bold|italic"
                tools:ignore="SmallSp"
                tools:text="Verb" />

            <TextView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:drawablePadding="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:textColor="#2C2C2C"
                android:textSize="8sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_medal"
                tools:ignore="SmallSp"
                tools:text="1h" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leftValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:maxLines="6"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textAlignment="viewStart"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Hello world" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:alpha="0.5"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/rightValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:maxLines="6"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Hello world" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/memoPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:alpha="0.7"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp,TextContrastCheck"
                tools:text="100%" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/sampleExampleLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/translatedByLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="5dp"
                    android:text="@string/translated_by"
                    android:textAlignment="viewStart"
                    android:textColor="#006EA8"
                    android:textSize="10sp"
                    app:drawableRightCompat="@drawable/text_google"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/translatedByRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:paddingStart="0dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/translated_by"
                    android:textAlignment="viewEnd"
                    android:textColor="#006EA8"
                    android:textSize="10sp"
                    app:drawableRightCompat="@drawable/text_google"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/leftSound"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/sound_content_description_left"
                    app:srcCompat="@drawable/btn_sound"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/empty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="" />

                <ImageView
                    android:id="@+id/rightSound"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/sound_content_description_right"
                    app:srcCompat="@drawable/btn_sound"
                    tools:ignore="ImageContrastCheck" />

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:alpha="0.2"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/exampleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="@string/sample_example_label"
                android:textColor="#3C3636"
                android:textSize="11sp"
                android:textStyle="italic"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/sampleExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="40"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:textColor="#3B435E"
                android:textStyle="bold"
                tools:text="sdfkljsdf;sjdf;sldjfk\nsdfkjl" />

            <TextView
                android:id="@+id/imageExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="@string/image_example_label"
                android:textColor="#3C3636"
                android:textSize="11sp"
                android:textStyle="italic"
                android:visibility="gone"
                tools:ignore="SmallSp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:alpha="0.2"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/sampleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textAlignment="viewStart"
                android:textColor="#495C8C"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:drawableStartCompat="@drawable/ic_sample_icon_gym"
                tools:text="Trained: 21.07.87 (5д назад)" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:contentDescription="@string/arrow_content_description"
            android:scaleX="2.5"
            android:scaleY="2.5"
            app:srcCompat="@drawable/ic_arrow_down" />
    </LinearLayout>

    <View
        android:id="@+id/paddingView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:visibility="gone" />
</LinearLayout>