<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sheetItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:alpha="0.9"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/bg_item_sheet"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sheetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:maxLines="1"
            android:textColor="#373737"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Hello" />

        <ImageView
            android:id="@+id/cancelSheet"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:scaleX="1.1"
            android:scaleY="1.1"
            app:srcCompat="@drawable/btn_cancel_item"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="@string/sheet_cancel_button_description" />

    </LinearLayout>

</androidx.cardview.widget.CardView>