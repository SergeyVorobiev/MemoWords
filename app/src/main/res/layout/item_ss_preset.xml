<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/bg_item_preset"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:contentDescription="@string/icon_spreadsheet_content_description"
        android:scaleX="1.1"
        android:scaleY="1.2"
        app:srcCompat="@drawable/ic_sheet"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spreadsheetId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="3dp"
            android:paddingVertical="1dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/notAnswered"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="90sdf0jpoasidfj;" />

        <TextView
            android:id="@+id/spreadsheetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center|start"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="tyyt" />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/notAnswered"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="Dictionaries" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ssCheck"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/preset_ss_content_description"
        app:srcCompat="@drawable/ic_check"
        tools:ignore="ImageContrastCheck" />

</LinearLayout>
